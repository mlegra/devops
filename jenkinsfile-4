pipeline {
    agent any
   
        parallel stages
    }
    parameters {
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
        string(name: 'Name', defaultValue: 'Lizy', description: 'Person?')
        string(name: 'Cant', defaultValue: '5', description: 'Cantidad?')
        
       
        }
        
    stages {
        stage('Example') {
            steps {
               echo "${params.Greeting} ${params.Name}!"
                // echo "${params.Greeting} World!"
                
                script {
                def obj = load "task1.groovy"
                        obj.Meth1()

                 params.each { item ->
                    //echo "Hello ${item}"}  
                     obj.Meth1()    
                     }  

                 def flag = 0
   def total = params.Cant
   int totalC = total.toInteger()
   println (total)
   println ("-----")
                  for(flag = 0;flag < totalC;flag++)
                   {
                      /* echo params.Cant
                       build job: 'job-2'*/
                     node {  stages["deploySC $flag}"] = {
                       stage("deploySC ${flag}") {
                       build job: 'job-2'
                       }
        }
    }
                   
                   }

                   node {
        parallel stages
    }
                  
                }
            }
        }
    

    
}